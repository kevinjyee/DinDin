<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_layout"
        android:background="@drawable/navigation_bar"
        android:elevation="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_photo"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:text="Gender"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <RadioGroup
                android:id="@+id/user_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">
            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:text="Male" />
            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:text="Female" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            <EditText
                android:id="@+id/profile_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:maxLength="30"
                android:top = "2dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:text="About Me"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            <EditText
                android:id="@+id/profile_short_bio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:clickable="true"
                android:elevation="4dp"
                android:maxLength="200"
                android:padding="20dp"
                android:top = "2dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:text="Favorite Dish"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            <EditText
                android:id="@+id/profile_dish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/line"
                android:clickable="true"
                android:maxLength="40"
                android:elevation="4dp"
                android:padding="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:text="Favorite Cuisine"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <EditText
                android:id="@+id/profile_cuisine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:clickable="true"
                android:maxLength="40"
                android:elevation="4dp"
                android:padding="20dp" />

            <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveProfileButton" />

            <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancelProfileButton" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>